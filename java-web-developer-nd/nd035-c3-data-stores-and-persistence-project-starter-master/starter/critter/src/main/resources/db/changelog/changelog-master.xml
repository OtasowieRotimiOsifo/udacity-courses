        <createTable tableName="user">
            <column name="id" type="BIGINT(8)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_id_pk" />
            </column>
            <column name="name" type="varchar(250)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
        <addAutoIncrement tableName="owner" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1" />
        <addAutoIncrement tableName="pet" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1" />
        <addAutoIncrement tableName="user" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1" />
        <addAutoIncrement tableName="employee" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1" />
        <addAutoIncrement tableName="schedule" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1" />
